<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <h1>Add Post</h1>
    <form id="post-form" method="post" action="/add-post">
      <div class="form-info">
        <label>
          Post Title
          <input type="text" name="title" placeholder="title" />
        </label>
        <label>
          Author
          <input type="text" name="author" placeholder="firstName" />
        </label>
      </div>

      <div class="form-text">
        <label>
          Post text
          <textarea class="form-text" placeholder="text" name="text"></textarea>
        </label>
      </div>
      <div class="form-botton">
        <input type="submit" value="Submit" />
      </div>
    </form>
  </body>
</html>
