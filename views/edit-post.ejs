<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <h2>Adit Post:</h2>
    <form
      id="post-form"
      method="post"
      action="/edit/<%= post.id %>?_method=PUT"
    >
      <div class="form-info">
        <label>
          Post Title:
          <input
            type="text"
            name="title"
            placeholder="title"
            value="<%= post.title %>"
          />
        </label>
        <label>
          Author:
          <input
            type="text"
            name="author"
            placeholder="firstName"
            value="<%= post.author %>"
          />
        </label>
      </div>

      <div class="form-text">
        <label>
          Post text:
          <textarea class="form-text" placeholder="text" type="text" name="text"  value='<%= post.text %>'>
           <%= post.text %>
          </textarea>
        </label>
      </div>
      <div class="form-button">
        <input type="submit" value="Submit" />
      </div>
    </form>
  </body>
</html>
